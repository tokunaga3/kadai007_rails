<h1>tweet一覧</h1>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @post.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post) %></td>
    <td><%= link_to "ブログを編集する", edit_post_path(post) %></td>
    <!-- post.idとすることでそのレコードのid値を拾ってくる -->
  </tr>
<% end %>
</table>
<%= link_to '新しくつぶやく', new_post_path %>
